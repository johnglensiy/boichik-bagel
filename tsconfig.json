{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "jsx": "react-jsx", // Use "react" for React 17 and below
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@fonts/*": ["src/fonts/*"],
            "@components/*": ["src/components/*"],
            "@styles/*": ["src/styles/*"],
        },
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "dist"],
  }
  